<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android = "http://schemas.android.com/apk/res/android">
	<item android:state_pressed = "true">
		<shape android:shape = "oval">
			<size android:width="90dp" android:height="90dp"/>
			<gradient android:angle = "-90" android:endColor = "@color/colorRedDark" android:startColor = "@color/colorRedDark" />
		</shape>
	</item>
	<item android:state_focused = "true">
		<shape android:shape = "oval">
			<size android:width="90dp" android:height="90dp"/>
			<corners android:radius = "15dip" />
			<stroke android:width = "1dip" android:color = "@color/colorRed" />
			<solid android:color = "@color/colorRed" />
		</shape>
	</item>
	<item>
		<shape android:shape = "oval">
			<size android:width="90dp" android:height="90dp"/>
			<gradient android:angle = "-90" android:endColor = "@color/colorRed" android:startColor = "@color/colorRed" />
		</shape>
	</item>
</selector>