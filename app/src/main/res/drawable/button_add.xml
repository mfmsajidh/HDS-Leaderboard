<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android = "http://schemas.android.com/apk/res/android">
	<item android:state_pressed = "true">
		<shape android:shape = "oval">
			<size android:width="120dp" android:height="120dp"/>
			<gradient android:angle = "-90" android:endColor = "@color/colorGreenDark" android:startColor = "@color/colorGreenDark" />
		</shape>
	</item>
	<item android:state_focused = "true">
		<shape android:shape = "oval">
			<size android:width="120dp" android:height="120dp"/>
			<corners android:radius = "15dip" />
			<stroke android:width = "1dip" android:color = "@color/colorGreen" />
			<solid android:color = "@color/colorGreen" />
		</shape>
	</item>
	<item>
		<shape android:shape = "oval">
			<size android:width="120dp" android:height="120dp"/>
			<gradient android:angle = "-90" android:endColor = "@color/colorGreen" android:startColor = "@color/colorGreen" />
		</shape>
	</item>
</selector>